{
  "manifest_version": 3,

  "name": "MangaNato Enhancer",
  "description": "Enhances the MangaNato reading experience with additional features.",
  "version": "1.0",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
      {
          "matches": ["https://www.natomanga.com/*", "https://manganato.com/*"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "css": ["content-styles.css"]
      }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://www.natomanga.com/*", "https://manganato.com/*"
  ]
}
