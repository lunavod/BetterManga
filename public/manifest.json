{
  "manifest_version": 3,

  "name": "NatoManga Enhancer",
  "description": "Enhances the NatoManga reading experience with additional features.",
  "version": "1.0",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
      {
          "matches": ["https://www.natomanga.com/*"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "css": ["content-styles.css"]
      }
  ],

  "host_permissions": [
    "https://www.natomanga.com/*"
  ]
}
